<Window x:Class="Chezzz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:chezzz="clr-namespace:Chezzz"
        mc:Ignorable="d"
        Title="MainWindow" Loaded="MainWindow_OnLoaded" Height="450" Width="800">
    <DockPanel LastChildFill="true">
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <Button Name="Advice" Click="Advice_OnClick" IsEnabled="True" Padding="6 0 6 0">Advice</Button>
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <TextBlock Name="Status" />
            </StatusBarItem>
            <StatusBarItem Grid.Column="2">
                <ComboBox Name="Platform" SelectedIndex="0" SelectionChanged="Platform_SelectionChanged">
                    <ComboBoxItem Content="{x:Static chezzz:AppConsts.CHESS}"/>
                    <ComboBoxItem Content="{x:Static chezzz:AppConsts.LICHESS}" />
                </ComboBox>
            </StatusBarItem>
        </StatusBar>

        <WrapPanel Name="Panel" DockPanel.Dock="Bottom">
            <WrapPanel.Background>
                <SolidColorBrush Color="#242424"/>
            </WrapPanel.Background>
            <Label BorderThickness="1">
                <Label.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#00C000" Offset="0"/>
                        <GradientStop Color="#008000" Offset="0.4"/>
                        <GradientStop Color="#004000" Offset="0.8"/>
                        <GradientStop Color="#004000" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Background>
                <Label.BorderBrush>
                    <SolidColorBrush Color="Green"/>
                </Label.BorderBrush>
                <Grid>
                    <TextBlock Text="Click 'Advice'" Padding="4 0 4 0" Foreground="White"/>
                </Grid>
            </Label>
            <WrapPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="2,3,0,2"/>
                </Style>
                <Style TargetType="Label">
                    <Setter Property="Margin" Value="2,3,0,2 "/>
                </Style>
            </WrapPanel.Resources>
        </WrapPanel>
        <wv2:WebView2 Name="WebBrowser" />
    </DockPanel>
</Window>
